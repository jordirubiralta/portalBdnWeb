{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h2>Nou esdeveniment</h2>
        </div>
        <div class="card-body">
            <form action="/events/new-event" method="POST">
                <div class="form-group">
                    <h5>Títol</h5>
                    <input type="text" name="title" class="form-control" placeholder="Títol esdeveniment" autofocus>
                </div>
                <div class="form-group">
                    <h5>Descripció</h5>
                    <textarea name="description" class="form-control" placeholder="Descripció de l'esdeveniment"></textarea>
                </div>
                <div class="form-group">
                    <h5>Ubicació</h5>
                    <input type="text" name="location" class="form-control" placeholder="Ubicació" autofocus>
                </div>
                <div class="form-group">
                    <h5>Data</h5>
                    <input type='datetime-local' name="date" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
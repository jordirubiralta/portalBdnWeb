<div class="row">
    {{#each events}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        {{title}}
                    </h4>
                    <p>{{description}}</p>
                    <p>{{location}}</p>
                    <p>{{date}}</p>
                    <div class="form-group">
                        <form action="/events/edit/{{_id}}" method="GET">
                            <button class="btn btn-primary btn-block" type="submit">Editar</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <form action="/events/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block btn-sm" type="submit">Esborrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p cass="lead">No hi ha esdeveniments</p>
                <a href="events/add" class="btn btn-success btn-block">Crea un esdeveniment</a>
            </div>
        </div>

    {{/each}}
</div>